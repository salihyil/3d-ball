{
  "name": "ball-brawl-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w @sasi/web\" \"npm run dev -w @sasi/server\"",
    "build": "npm run build -w @sasi/shared && npm run build -w @sasi/web",
    "start": "npm run start -w @sasi/server",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write .",
    "test": "npm run test -w @sasi/web",
    "test:watch": "npm run test:watch -w @sasi/web",
    "test:e2e": "playwright test",
    "check": "npm run build && npm run lint && npm run test",
    "prepare": "husky"
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^9.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "~5.7.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  }
}
